<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

</ul>

<%= link "Edit", to: post_path(@conn, :edit, @post) %>
<%= link "Back", to: post_path(@conn, :index) %>

<%= render "comments.html", post: @post %>
<%= render "comment_form.html", post: @post,
                                changeset: @changeset,
                                action: post_post_path(@conn, :add_comment, @post) %>
